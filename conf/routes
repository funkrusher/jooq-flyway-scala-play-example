# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# JOOQ Test-Routes
GET     /jooq/book                       controllers.BookController.jooqFetchAllBooks
POST    /jooq/book                       controllers.BookController.jooqAddBook
POST    /jooq/book/delete                controllers.BookController.jooqDeleteBook

GET     /jooq/author                     controllers.AuthorController.jooqFetchAllAuthors
POST    /jooq/author                     controllers.AuthorController.jooqAddAuthor
POST    /jooq/author/delete              controllers.AuthorController.jooqDeleteAuthor

GET     /jooq/test1                      controllers.TestController.jooqTest1
GET     /jooq/test2                      controllers.TestController.jooqTest2
GET     /jooq/test3                      controllers.TestController.jooqTest3
GET     /jooq/test4                      controllers.TestController.jooqTest4
GET     /jooq/test5                      controllers.TestController.jooqTest5
GET     /jooq/test6                      controllers.TestController.jooqTest6

# SLICK Test-Routes

GET     /slick/author                     controllers.AuthorController.slickFetchAllAuthors
GET     /slick/test6                      controllers.TestController.slickTest6




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
